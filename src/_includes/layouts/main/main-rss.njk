<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    {% include "layouts/head.njk" %}
    <link rel="stylesheet" href="/src/css/main.min.css">
  </head>
  <body>
    <div id="navModal" class="nav-modal">
      <div id="navModalBody" class="fadeable">
        <button id="mobileNavClose" class="button-hide">
          <i class="fa-solid fa-xmark fa-fw fa-xl"></i>
          <span class="visually-hidden">Close</span>
        </button>
        <nav id="mobileNav" class="mobile-nav">
          <ul>
            {% include "../main/nav-menu.njk" %}
          </ul>
        </nav>
      </div>
    </div>
    <header>
      {% include "../main/site-banner.njk" %}
      <nav id="topNav">
        {% include "../main/top-nav.njk" %}
      </nav>
    </header>
    <div id="siteBox">
      <div class="rss-header">
        {% if sectionLinks %}
          <div>
            <nav>
              <ul class="section-links">
                {% for link in sectionLinks %}
                  <a href="{{ sectionLinkBase }}{{ link.url }}">
                    <li>{{ link.section }}</li>
                  </a>
                {% endfor %}
              </ul>
            </nav>
          </div>
        {% endif %}
        <h1>{{ title | makeStartCase }}</h1>
        <a href="{{ rssLink }}" target="_blank"><i class="fa-solid fa-rss fa-2xl"></i></a>
      </div>
      <main>{{ content | safe }}</main>
    </div>
    <footer>
      {% include "layouts/footer-copyright.njk" %}
    </footer>
    {% include "layouts/scripts.njk" %}
  </body>
</html>
