---
layout: /layouts/main/main.njk
eleventyComputed:
  title: "Art Gallery: {{ categPagi.categLabel | safe }}"
pagination:
  data: galleryCategIndex.scrap
  size: 1
  alias: categPagi
permalink: "/art-gallery/{{ categPagi.categLabel | slugify }}/"
---
<span class="heading-subtitle">{{ categPagi.categDesc | safe }}</span>

<div>
  <nav>
    <ul class="section-links">
      <a href="../"><li>◀◀ Back</li></a>
      {% for item in galleryCategIndex.scraps %}
        <a href="../{{ item.categLabel | slugify }}"><li>{{ item.categLabel }}</li></a>
      {% endfor %}
    </ul>
  </nav>
</div>

<div id="galleryGrid" class="fadeable gallery-thumb-grid block-spaced">
  {% set galleryCateg = categPagi.categKey %}
  {% set categCollection = collections.artGallery | includes("data.galleryScraps", true) %}
  {% include "blocks/gallery-scraps-thumb-grid-roll.njk" %}
</div>