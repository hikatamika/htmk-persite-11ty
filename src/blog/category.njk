---
layout: /layouts/main/main.njk
pagination:
  data: collections.blogCategList
  size: 1
  alias: blogCateg
permalink: "/blog/category/{{ blogCateg | slugify }}/"
eleventyComputed:
  title: "Blog Posts Categorized: {{ blogCateg | makeUpperFirst }}"
---
<nav class="pagi-navi pagi-navi-top meta-select-navi">
  <div>
    <ul class="section-links">
      <a href="../../"><li>◀◀ Back</li></a>
    </ul>
  </div>
  <div class="meta-select">
    <div>
      <span class="dropdown-select-label">Categories:</span>
      <select name="categSelect" id="categSelect" onChange="window.location.href=this.value">
        <option value="#">Category Select</option>
        {% for categ in collections.blogCategList %}
          <option value="/blog/category/{{ categ | slugify }}">
          {% for item in blogCategIndex %}
            {% if item.categKey == categ %}
              {{ item.categLabel }}
            {% endif %}
          {% endfor %}
          </option>
        {% endfor %}
      </select>
    </div>
    <div>
      <span class="dropdown-select-label">Tags:</span>
      <select name="tagSelect" id="tagSelect" onChange="window.location.href=this.value">
          <option value="#">Tag Select</option>
        {% for tag in collections.blogTagList %}
          <option value="/blog/tagged/{{ tag | slugify }}/">#{{ tag | makeUpperFirst  }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
</nav>
