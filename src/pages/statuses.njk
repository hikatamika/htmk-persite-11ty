---
layout: /layouts/main/main-rss.njk
title: Statuses
rssLink: "/status.xml"
pagination:
  data: collections.statuses
  size: 24
  alias: statuses
---

<div class="pagi-navi pagi-navi-top">{% include "blocks/pagi-navi.njk" %}</div>
<div class="status-roll">
  {% for status in statuses | reverse %}
    <div class="status-box">
      <div class="status-icon">
        <a href="/status" class="status-rss">
          <img src="/src/img/hika-status.webp" alt="Hika Icon">
        </a>
      </div>
      <div class="status-message">
        <span><b>{{ status.date | JStoRelative | makeTitleCase }}:</b> {{ status.content | safe }}</span>
      </div>
    </div>
  {% endfor %}
</div>
<div class="pagi-navi pagi-navi-bottom">{% include "blocks/pagi-navi.njk" %}</div>
